generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model User {
  userid              String   @id @default(cuid())
  email               String   @unique
  firstName           String
  lastName            String
  phoneNumber         String   @unique
  businessRole        String
  businessName        String
  businessHouseNumber String
  streetAddress       String
  town                String
  city                String
  state               String
  lga                 String
  landmark            String
  nearestBusStop      String
  bvn                 String   @unique
  validId             String  
  companyRegDoc       String   
  bankStatement       String   
  utilityBill         String  
  referralSource      String

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([businessName]) 
  @@index([city])        
  @@index([state])      
}
